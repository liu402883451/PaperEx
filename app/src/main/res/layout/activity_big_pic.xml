<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    tools:context=".ui.BigPicActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/iv_big_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/loading"
        />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/iv_big_pic"
        android:background="#335A5A5A"
        android:clickable="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@mipmap/menubar_back_dis_d_wallpaper"/>

        <TextView
            android:id="@+id/tv_top_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="壁纸详情"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/share_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@mipmap/share_search"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/iv_big_pic"
        android:background="#335A5A5A"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_demo"
            android:onClick="click"
            android:text="收藏"/>

        <Button
            android:id="@+id/btn_set_wallpager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_demo"
            android:onClick="click"
            android:text="设为壁纸"/>

        <Button
            android:id="@+id/btn_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_demo"
            android:onClick="click"
            android:text="下载"/>
    </LinearLayout>
</RelativeLayout>
